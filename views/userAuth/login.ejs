<%- include('header-login') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id ="email"class="form-control my-2" name="email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id ="password"class="form-control my-2" name="password">
            </div>
            <div class="pb-1 ">         
                 <% if (messages.error) { %> 
              <%=messages.error%> 
              <% } %>
             </div>

            <button type="submit" class="btn btn-dark ">Login</button>
           <p class="pt-1 ps-0 mb-0 pb-0 my-0" style="font-size: 14px; ">Not a user? Click <a href="/register">here</a> to register.</p> 
          </form>

        </div>
      </div>
    </div>

